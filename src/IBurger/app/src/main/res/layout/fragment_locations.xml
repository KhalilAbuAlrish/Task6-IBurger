<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.LocationsFragment"
    android:background="@drawable/location"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:id="@+id/layout_action_location"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        >



        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_back"
            android:id="@+id/btn_back_profile"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"

            />






    </LinearLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="610dp"
        android:src="@drawable/item_3"
        android:layout_centerHorizontal="true"
        android:id="@+id/ar_1"
        />


    <ImageView
        android:id="@+id/ar_2"
        android:layout_width="291dp"
        android:layout_height="411dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-54dp"

        android:src="@drawable/item" />



    <ImageView
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:src="@drawable/i_burger_small"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:id="@+id/location_burger_1"
        />


    <TextView
        android:id="@+id/text_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/location_burger_1"
        android:text="A M M A N - A B D O O N"
        android:gravity="center"
        android:textColor="@color/Orange"
        android:textSize="20sp"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/text_location_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_location"
        android:text="0 7 9 5 3 4 7 3 4 1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="360dp"
        android:layout_height="550dp"
        android:src="@drawable/i_burger_small"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:id="@+id/location_burger_2"
        android:layout_below="@id/text_location_2"
        android:scaleType="fitCenter"
        />

</RelativeLayout>