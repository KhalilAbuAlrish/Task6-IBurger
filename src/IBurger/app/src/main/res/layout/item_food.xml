<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="260dp"
    android:layout_margin="10dp"
    >


    <ImageView
        android:id="@+id/iamge"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/item_1"
        android:scaleX="1.6"
        android:scaleY="1.7"
        />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:id="@+id/radio_group"

        >


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHESS\nBURGER"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:id="@+id/radio_button_name_food"
            android:textColor="@color/Dark_Gray"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 jd"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/Dark_Gray"
            android:id="@+id/food_price"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEAL"
            android:textSize="12sp"
            android:textColor="@color/Dark_Gray"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 jd"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/Dark_Gray"
            android:id="@+id/male_price"
            />

    </RadioGroup>


    <LinearLayout
        android:id="@+id/linear_container_button"
        android:layout_width="38dp"
        android:layout_height="90dp"
        android:background="@drawable/i_4"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="75dp"

        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/im_5"
            android:layout_weight="1"
            android:id="@+id/decrease"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/im_6"
            android:layout_weight="1"
            android:id="@+id/increase"
            />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textColor="@color/Dark_Gray"
        android:id="@+id/food_number"
        android:layout_below="@id/iamge"
        android:layout_centerHorizontal="true"

        />


</RelativeLayout>