<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.SnaksFragment"
    android:background="@drawable/checken"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:id="@+id/layout_action_snaks"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        >



        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_back"
            android:id="@+id/btn_back_profile"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snaks"
            android:gravity="center"
            android:textColor="@color/Yellow"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"

            />






    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_snaks"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_action_snaks"
        />



</RelativeLayout>