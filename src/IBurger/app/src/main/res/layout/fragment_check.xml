<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.CheckFragment"
    android:background="@drawable/check_out"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:id="@+id/layout_action_check"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        >



        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_back"
            android:id="@+id/btn_back_profile"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"

            />






    </LinearLayout>

    <ImageView
        android:id="@+id/art_1"
        android:layout_width="391dp"
        android:layout_height="637dp"
        android:layout_centerInParent="true"
        android:src="@drawable/item_2" />

    <ImageView
        android:id="@+id/art_2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/i_burger_small"
        android:layout_marginTop="220dp"
        />

    <ImageView
        android:id="@+id/art_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/finance"
        android:layout_below="@id/art_2"
        />



    <TextView
        android:id="@+id/price_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/art_3"
        android:text="30 jd"
        android:textColor="@color/Yellow"
        android:textSize="45sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/art_4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/i"
        android:layout_marginTop="450dp"
        />


    <TextView
        android:id="@+id/order_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="520dp"
        android:text="ORDER \n NOW !"
        android:gravity="center"
        android:textColor="@color/Orange"
        android:textSize="20sp"
        android:textStyle="bold"
        />

</RelativeLayout>