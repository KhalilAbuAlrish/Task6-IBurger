<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:layout_margin="7dp">


    <ImageView
        android:id="@+id/image"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:scaleX="1.8"

        android:scaleY="1.8"
        android:src="@drawable/iii" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/chicken_b"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/image_order"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S H A W A R M A"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/Dark_Gray"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image_order"
        android:id="@+id/name_order"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 jd"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/Dark_Gray"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name_order"
        android:layout_marginTop="5dp"
        android:id="@+id/price_item_order"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/Dark_Gray"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/price_item_order"
        android:layout_marginTop="5dp"
        android:id="@+id/number_item_order"
        />



    <LinearLayout
        android:id="@+id/linear_container_button"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:background="@drawable/i_5"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"

        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/im_5"
            android:layout_weight="1"
            android:id="@+id/decrease_order"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/im_6"
            android:layout_weight="1"
            android:id="@+id/increase_order"
            />


    </LinearLayout>

</RelativeLayout>